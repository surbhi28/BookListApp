<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/up_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_marginTop="54dp"
        android:layout_height="223dp" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Title : "
        android:layout_marginTop="12dp"
        android:layout_below="@id/imageView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/text_title"
        android:text="Book title"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/book_title"
        app:srcCompat="@drawable/baseline_share_white_18dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_title"
        android:layout_below="@id/text_title"
        android:layout_marginTop="12dp"
        android:text="Author : "
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/book_auth"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:layout_toRightOf="@id/textView11"
        android:layout_marginTop="12dp"
        android:text="Author name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_pulb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_title"
        android:layout_marginTop="12dp"
        android:layout_below="@id/textView11"
        android:text="Publisher : "
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_publ"
        android:layout_width="281dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_auth"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@id/tv_pulb"
        android:text="book_publ" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pulb"
        android:layout_marginTop="12dp"
        android:text="Price : "
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_price"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_publ"
        android:layout_toRightOf="@id/textView16"
        android:text="book_cost"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_publ"
        android:layout_alignStart="@+id/book_price"
        android:layout_alignRight="@+id/book_price"
        android:layout_marginStart="100dp"
        android:layout_marginRight="-118dp"
        android:layout_marginTop="12dp"
        android:text="Currency Code : "
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/code"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_publ"
        android:layout_alignEnd="@id/textView24"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-80dp"
        android:text="INR"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/book_desc"
        android:layout_below="@+id/textView16" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/read_button"
        android:text="Click To Read"
        android:layout_below="@id/book_desc"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
    </ScrollView>